

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1516481025691-ba0f3e6d43b4?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=c27a03efea95e481e6befb649d5db144&auto=format&fit=crop&w=1650&q=80');">
  <div class="banner-content">
    <h1>Cocktails Mania</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
  </div>
</div>


<div class="container">
  <h1>🍹Your Cocktails</h1>
  <div class="row">
    <% if @cocktails.nil? %>
    <% else %>
     <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-description">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>


<div class="banner-2">
  <div class="banner-content">
    <h3><%= link_to "Be a Hero, Add a cocktail", new_cocktail_path %></h3>
  </div>
</div>




<%= javascript_pack_tag 'application' %>
