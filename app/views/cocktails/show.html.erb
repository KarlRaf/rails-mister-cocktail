<h1>Cocktails#show</h1>
<h2> <%= @cocktail.name %> </h2>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<h1> <%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %> </h1>
<h2><% @cocktail.doses.each do |dose| %></h2>
  <h2><%= dose.description %></h2>
  <h2><%= dose.ingredient[:name] %> </h2>
  <%= link_to "delete dose", cocktail_dose_path(@cocktail, dose), method: :delete  %>
<% end %>
<%= link_to "return to home page", cocktails_path %>
